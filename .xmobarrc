Config { font = "xft:Source Code Pro:pixelsize=14:antialias=true:hinting=true"
       , bgColor = "#292d3e"
       , fgColor = "#e1acff"
       , position = Static { xpos = 0 , ypos = 0, width = 1280, height = 24 }
       , lowerOnStart = True
       , commands = [ Run Weather "EGPF" ["-t","<station>: <tempC>C","-L","18","-H","25","--normal","green","--high","red","--low","lightblue"] 36000
                    , Run Network "enp7s0" ["-L","0","-H","2002","-n","green","-h","red"] 10
                    , Run Cpu [] 10
                    , Run Memory ["-t","Mem: <usedratio>%","-n","#e1acff"] 10
                    , Run DiskU [("/", "hdd: <free> free")] [] 60
                    , Run Com "uname" ["-r"] "" 36000
                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    , Run UnsafeStdinReader
                    , Run Alsa "default" "Master" []
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%UnsafeStdinReader% }{<fc=#FFB86C> %cpu% </fc><fc=#666666>|</fc> <fc=#FF5555> %memory% </fc><fc=#666666> | </fc> <fc=#82AAFF> %disku% </fc><fc=#666666> |</fc> <fc=#c3e88d> %alsa:default:Master% </fc><fc=#666666> | </fc> <fc=#8BE9FD> %date%  </fc>"
       
       }

       
